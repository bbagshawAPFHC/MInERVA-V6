{
  "compilerOptions": {
    "target": "ES2020", // Use ES2020 or ESNext if you want the latest features
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, // Ensures consistent casing in imports
    "moduleResolution": "node", // Ensures module resolution works correctly
    "resolveJsonModule": true, // Allows importing JSON modules
    "sourceMap": true // Generates source maps for debugging
  },
  "include": ["src/**/*"], // Includes all files in the src directory
  "exclude": ["node_modules", "**/*.spec.ts"] // Excludes node_modules
}
